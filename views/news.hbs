<div class="pager">
    {{#if data.hasLast}}
    <a href="/news?page={{data.lastPage}}" class="last">
        {{else}}
        <a class="last disabled">
            {{/if}}
            <i class="material-icons">arrow_back</i>
        </a>
        {{#if data.hasNext}}
        <a href="/news?page={{data.nextPage}}" class="next">
            {{else}}
            <a class="next disabled">
                {{/if}}
                <i class="material-icons">arrow_forward</i>
            </a>
</div>

