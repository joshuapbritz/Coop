{{#if article}}
<div class="container">
    <form action="/admin/news/edit/{{article._id}}" method="post" class="form" enctype="multipart/form-data">
        <div class="control">
            <div style="width: 60%; max-height: 600px; overflow: hidden; margin: auto;">
                <img src="{{article.path}}" alt="{{article.title}} Image" style="width: 100%; height: auto;">
            </div>
        </div>
        <div class="control">
            <input type="text" name="title" placeholder="Title" value="{{article.title}}">
        </div>
        <div class="control">
            <span class="reflect-input">An article by {{article.author}}</span>
            <input type="hidden" name="author" value="{{article.author}}">
        </div>
        <div class="control">
            <textarea class="editor" name="body" placeholder="Body">{{{article.body}}}</textarea>
        </div>
        <div class="control center-text">
            <button class="button info small">Save</button>
        </div>
    </form>
</div>
{{else}}
<div class="container">
    <form action="/admin/news" method="post" class="form" enctype="multipart/form-data">
        <div class="control">
            <input type="text" name="title" placeholder="Title">
        </div>
        <div class="control">
            <input type="file" placeholder="image" name="upload">
        </div>
        <div class="control">
            <span class="reflect-input">An article by {{user.name}} {{user.surname}}</span>
            <input type="hidden" name="author" value="{{user.name}} {{user.surname}}">
        </div>
        <div class="control">
            <textarea class="editor" name="body" placeholder="Body"></textarea>
        </div>
        <div class="control center-text">
            <button class="button info small">Save</button>
        </div>
    </form>
</div>
{{/if}}