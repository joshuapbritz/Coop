<div class="pager">
    {{#if data.hasLast}}
    <a href="/news?page={{data.lastPage}}" class="last">
        {{else}}
        <a class="last disabled">
            {{/if}}
            <i class="material-icons">arrow_back</i>
        </a>
        {{#if data.hasNext}}
        <a href="/news?page={{data.nextPage}}" class="next">
            {{else}}
            <a class="next disabled">
                {{/if}}
                <i class="material-icons">arrow_forward</i>
            </a>
</div>

<div class="home-articles">
    {{#each data.records}}
    <div class="container">
        <a href="/news/read/{{this._id}}" class="article-item" style="background-image:url('{{this.path}}')">
            <div class="title">
                <h2>{{this.title}}</h2>
            </div>
        </a>
    </div>
    {{/each}}
</div>

